<%= form_for [@page, @element],
  :url => @element.new_record? ? page_texts_path(@page) : nil do |form| %>
  <fieldset>
    <ol>
      <li>
        <%= label :element, :text %>
        <%= text_area :element, :text, :class => 'mceEditor' %>
      </li>
    </ol>
  </fieldset>
  <fieldset>
    <%= form.submit %>
    <%= link_to 'Cancel', manage_page_path(@page) %>
  </fieldset>
<% end %>
