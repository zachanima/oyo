<!DOCTYPE html>
<html>
<head>
  <title><%= @page ? @page.title : nil %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= include_tiny_mce_if_needed %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="header">
  <div>
    <%= link_to image_tag('/images/header.png'), root_path %>
  </div>
</div>

<div id="main">
  <div id="nav">
    <ol>
      <% Page.all.each do |page| %>
        <li><%= link_to page.title, page %></li>
      <% end %>
      <li><%= link_to 'New', new_page_path %></li>
    </ol>
  </div>

  <div id="content" data-page="<%= @page.id %>">
    <%= yield %>
  </div>
</div>

</body>
</html>
