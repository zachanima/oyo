<!DOCTYPE html>
<html>
<head>
  <title><%= @page ? @page.title : nil %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= include_tiny_mce_if_needed %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="header">
  <div>
    <%= link_to image_tag('/images/header.png'), root_path %>
    <span>Danmark - Indien</span>
  </div>
</div>

<div id="main">
  <div id="nav">
    <ol>
      <%= render Page.all %>
      <li><%= link_to 'New page', new_page_path %></li>
      <li><%= link_to 'New link', new_link_path %></li>
    </ol>
    <%= link_to 'Log out', root_path %>
  </div>

  <div class="manage" id="content" data-page="<%= @page.id %>">
    <%= yield %>
  </div>
</div>

</body>
</html>
