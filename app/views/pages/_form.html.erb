<% @page.errors.full_messages.each do |message| %>
  <p class="error"><%= message %>.</p>
<% end %>

<%= form_for @page do |form| %>
  <fieldset>
    <ol>
      <li>
        <h1>
          <%= form.label :title, :class => 'required' %>
          <%= form.text_field :title %>
        </h1>
      </li>
      <li>
        <%= form.label :parent_id %>
        <%= form.collection_select :parent_id, Page.where(:parent_id => nil).order(:position), :id, :title, :include_blank => true %>
      </li>
    </ol>
  </fieldset>
  <fieldset>
    <%= form.submit %>
    <%= link_to 'Cancel', manage_page_path(@page) unless @page.new_record? %>
  </fieldset>
<% end %>
