<%= form_for [@page, @element],
  :url => @element.new_record? ? page_headers_path(@page) : nil do |form| %>
  <fieldset>
    <ol>
      <h2>
        <li>
          <%= label :element, :text %>
          <%= text_field :element, :text %>
        </li>
      </h2>
    </ol>
  </fieldset>
  <fieldset>
    <%= form.submit %>
    <%= link_to 'Cancel', manage_page_path(@page) %>
  </fieldset>
<% end %>
